<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:id="@+id/ivStop"
        android:layout_width="34sp"
        android:layout_height="34sp"
        android:layout_alignTop="@+id/title"
        android:layout_marginStart="-47dp"
        android:layout_toEndOf="@+id/ivPlay"
        android:src="@drawable/stopp" />

    <ImageView
        android:id="@+id/list_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/subtilte"
        android:layout_alignLeft="@+id/subtilte"
        android:layout_alignStart="@+id/subtilte"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="Song name"
        android:textAlignment="center"
        android:textColor="#7019c1"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/subtilte"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:text="Singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignBottom="@+id/list_image"
        android:layout_toRightOf="@+id/list_image"
        android:layout_toEndOf="@+id/list_image" />

    <ImageView
        android:id="@+id/ivPlay"
        android:layout_width="34sp"
        android:layout_height="34sp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/title"
        android:layout_marginEnd="47dp"
        android:src="@drawable/play" />


    <ImageView
        android:id="@+id/version_title"
        android:layout_width="34sp"
        android:layout_height="34sp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/title"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="-12dp"
        android:focusable="false"
        android:src="@drawable/example" />



</RelativeLayout>
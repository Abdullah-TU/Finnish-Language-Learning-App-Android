<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
    android:background="@drawable/back2">

    <ImageView
        android:id="@+id/logodesign"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/flashcardss"
        android:gravity="bottom"
        android:padding="32dp" />


    <HorizontalScrollView
        android:id="@+id/horijontal"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layflip"
        android:padding="20dp"
         android:layout_marginTop="90dp"
        tools:ignore="UnknownId">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imageView3">

                    <com.wajahatkarim3.easyflipview.EasyFlipView
                        android:id="@+id/easyFlipView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flipDuration="500"
                        app:flipEnabled="true"
                        app:flipOnTouch="false"
                        app:flipType="vertical">

                        <ImageView
                            android:id="@+id/imgBackCard"
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:src="@drawable/heart_back" />

                        <ImageView
                            android:id="@+id/imgFrontCard"
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:src="@drawable/heart_front" />

                   </com.wajahatkarim3.easyflipview.EasyFlipView>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imageView3">

                    <com.wajahatkarim3.easyflipview.EasyFlipView
                        android:id="@+id/easyFlipView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flipDuration="500"
                        app:flipEnabled="true"
                        app:flipOnTouch="false"
                        app:flipType="vertical"

                        >

                        <ImageView
                            android:id="@+id/imgBackCard1"
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:spacing="30dp"
                            android:src="@drawable/head_back" />

                        <ImageView
                            android:id="@+id/imgFrontCard1"
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:src="@drawable/head_front" />

                   </com.wajahatkarim3.easyflipview.EasyFlipView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imageView3">

                    <com.wajahatkarim3.easyflipview.EasyFlipView
                        android:id="@+id/easyFlipView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flipDuration="500"
                        app:flipEnabled="true"
                        app:flipOnTouch="false"
                        app:flipType="vertical">

                        <ImageView
                            android:id="@+id/imgBackCard2"
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:src="@drawable/teeth_back" />

                        <ImageView
                            android:id="@+id/imgFrontCard2"
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:src="@drawable/teeth_front" />

                   </com.wajahatkarim3.easyflipview.EasyFlipView>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imageView3">


                    <com.wajahatkarim3.easyflipview.EasyFlipView
                        android:id="@+id/easyFlipView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flipDuration="500"
                        app:flipEnabled="true"
                        app:flipOnTouch="false"
                        app:flipType="vertical">

                        <ImageView
                            android:id="@+id/imgBackCard3"
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:src="@drawable/eye_back" />

                        <ImageView
                            android:id="@+id/imgFrontCard3"
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:src="@drawable/eye_front" />

                   </com.wajahatkarim3.easyflipview.EasyFlipView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imageView3">

                    <com.wajahatkarim3.easyflipview.EasyFlipView
                        android:id="@+id/easyFlipView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flipDuration="500"
                        app:flipEnabled="true"
                        app:flipOnTouch="false"
                        app:flipType="vertical">

                        <ImageView
                            android:id="@+id/imgBackCard4"
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:src="@drawable/nose_back" />

                        <ImageView
                            android:id="@+id/imgFrontCard4"
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:src="@drawable/nose_front" />

                   </com.wajahatkarim3.easyflipview.EasyFlipView>

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </HorizontalScrollView>

</RelativeLayout>

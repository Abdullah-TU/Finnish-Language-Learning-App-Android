<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back1"
    tools:context=".GrammarActivity" >

    <HorizontalScrollView
        android:layout_width="381dp"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/finnishhrammarintro"
                        android:layout_width="160sp"
                        android:layout_height="140sp"
                        android:paddingRight="15dp"
                        android:spacing="15dp"
                        android:src="@drawable/introgrm" />

                    <ImageView
                        android:id="@+id/scriptandortho"
                        android:layout_width="160sp"
                        android:layout_height="140sp"
                        android:paddingRight="15dp"
                        android:spacing="15dp"
                        android:src="@drawable/scriptandoth" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/vowelhar"
                        android:layout_width="160sp"
                        android:layout_height="140sp"
                        android:paddingRight="15dp"
                        android:spacing="15dp"
                        android:src="@drawable/vharmony" />

                    <ImageView
                        android:id="@+id/consonantgrd"
                        android:layout_width="160sp"
                        android:layout_height="140sp"
                        android:paddingRight="15dp"
                        android:spacing="15dp"
                        android:src="@drawable/congrade" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/prepostion"
                        android:layout_width="160sp"
                        android:layout_height="140sp"
                        android:paddingRight="15dp"
                        android:spacing="15dp"
                        android:src="@drawable/prep" />

                    <ImageView
                        android:id="@+id/casess"
                        android:layout_width="160sp"
                        android:layout_height="140sp"
                        android:paddingRight="15dp"
                        android:spacing="15dp"
                        android:src="@drawable/casefin" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/pronouns"
                        android:layout_width="160sp"
                        android:layout_height="140sp"
                        android:paddingRight="15dp"
                        android:spacing="15dp"
                        android:src="@drawable/pronfin" />

                    <ImageView
                        android:id="@+id/adjectives"
                        android:layout_width="160sp"
                        android:layout_height="140sp"
                        android:paddingRight="15dp"
                        android:spacing="15dp"
                        android:src="@drawable/adj" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/verb"
                        android:layout_width="160sp"
                        android:layout_height="140sp"
                        android:paddingRight="15dp"
                        android:spacing="15dp"
                        android:src="@drawable/verbfinland" />

                    <ImageView
                        android:id="@+id/tenses"
                        android:layout_width="160sp"
                        android:layout_height="140sp"
                        android:paddingRight="15dp"
                        android:spacing="15dp"
                        android:src="@drawable/tensu" />

                </LinearLayout>



            </LinearLayout>


        </ScrollView>
    </HorizontalScrollView>

</LinearLayout>